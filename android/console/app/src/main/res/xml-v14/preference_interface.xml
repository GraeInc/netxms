<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="1"
        android:dialogTitle="@string/pref_multiplier_title"
        android:entries="@array/multiplier_labels"
        android:entryValues="@array/multiplier_values"
        android:key="global.multipliers"
        android:summary="@string/pref_multipliers_summary"
        android:title="@string/pref_multipliers" />
    <EditTextPreference
        android:defaultValue="10"
        android:digits="0123456789"
        android:enabled="true"
        android:key="global.graph.textsize"
        android:summary="@string/pref_graph_text_size_summary"
        android:title="@string/pref_graph_text_size" />
    <org.netxms.ui.android.main.settings.CustomSwitchPreference
        android:defaultValue="true"
        android:enabled="true"
        android:key="global.graph.legend"
        android:summaryOff="@string/pref_show_legend_disabled"
        android:summaryOn="@string/pref_show_legend_enabled"
        android:title="@string/pref_show_legend" />
</PreferenceScreen>
