/* Check control structures */

n = 0;
for(i = 0; i < 1000; i += 2)
	n++;
assert(n == 500);

if (n < 1000)
	m = -1;
else
	assert(false);

assert(m < 0);
while((n > 0) && (m < 0))
{
	n -= 100;
}
assert(n <= 0);
assert(m < 0);

for(i : %(1, 2, 3, 4, 5))
{
	switch(i)
	{
		case 1:
			a1 = true;
			break;
		case 2:
			a2 = true;
			break;
		case 3:
			a3 = true;
			break;
		case 4:
			a4 = true;
			break;
		case 5:
			a5 = true;
			break;
		default:
			assert(false);
			break;
	}
}
assert(a1 && a2 && a3 && a4 && a5);

assert(f1() == 1);
assert(f2() == -1);
assert(f3() == null);

sub f1()
{
	return 1;
}

sub f2()
{
	return -1;
}

sub f3()
{
}

// Check short-circuit evaluation
global flag = false;
assert(s1() || s2());
assert(!flag);
assert(s1() && s2());
assert(flag);

flag = false;
p = !s1() && !s2();
assert(!p);
assert(!flag);

sub s1()
{
	return true;
}

sub s2()
{
	flag = true;
	return flag;
}

return 0;
